<div class="container">
<% if current_user %>
  <h1>Список клиентских приложений</h1>
	  <table class="table table-striped table-hover ">
	    <thead>
	      <tr>
	        <th>Название</th>
	        <th>Client_id</th>
	        <th>Client_secret</th>
	      </tr>
	   </thead>
	    <%  @clients.each do |cl| %>
	      <tr>
	        <td><%= cl.name %></td>              
	        <td> <%= cl.client_id %> </td>
	        <td> <%= cl.client_secret %> </td>
			<td></td>
	      </tr>
	    <% end  %>
	    </tbody>
	  </table>
	  	<%=link_to "Добавить приложение", {action: 'newclient'}, class: "btn btn-primary"%>
    <% else%>
  <div class="page-header">
    <h2>Для просмотра данных необходимо авторизоваться</h2>
    </div>
<% end %>
</div>
