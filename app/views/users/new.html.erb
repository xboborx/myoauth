<div class="container">
      <div class="page-header" id="banner">
        <div class="row">
          <div class="col-lg-8 col-md-7 col-sm-6">
            <h1>Регистрация</h1>
            <p class="lead">Введите регистрационные данные</p>
          </div>
        </div>
      </div>

<%= form_for :user, url: '/users', html: {class: "form-horizontal"} do |f| %>
  <fieldset>
    <div class="form-group">
      <%= label_tag(:username, "E-mail", class: 'col-lg-2 control-label')  %>
      <div class="col-lg-10">
        <%= f.email_field(:username, class: 'form-control') %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag(:password, "Пароль", class: 'col-lg-2 control-label')  %>
      <div class="col-lg-10">
        <%= f.password_field(:password , class: 'form-control') %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag(:password_confirmation, "Подтверждение пароля", class: 'col-lg-2 control-label')  %>
      <div class="col-lg-10">
        <%= f.password_field(:password_confirmation , class: 'form-control') %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag(:first_name, "Имя", class: 'col-lg-2 control-label')  %>
      <div class="col-lg-10">
        <%= f.text_field(:first_name , class: 'form-control') %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag(:last_name, "Фамилия", class: 'col-lg-2 control-label')  %>
      <div class="col-lg-10">
        <%= f.text_field(:last_name , class: 'form-control') %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit("Отправить", class: 'btn btn-primary')  %>
      </div>
    </div>
  </fieldset>
<% end %>
</div>
